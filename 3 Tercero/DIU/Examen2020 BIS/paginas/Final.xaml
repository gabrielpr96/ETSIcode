<Page x:Class="Examen2020_BIS.paginas.Final"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Examen2020_BIS.paginas"
      mc:Ignorable="d" 
      Background="#ebcdff"
      d:DesignHeight="430" d:DesignWidth="708"
      MouseMove="actualizarCords"
      Title="Final">
    <Grid>
        <Grid.Background>
            <ImageBrush TileMode="Tile" Viewport="0, 0, 0.05, 0.05" Opacity="0.5" ImageSource="/Examen2020 BIS;component/src/RN.png"/>
        </Grid.Background>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Background="White" Padding="10, 2, 10, 2" Name="CordText" Visibility="Hidden" FontSize="32" FontFamily="Monotype" FontStyle="Oblique" Foreground="Black" HorizontalAlignment="Center"></TextBlock>
            <ToggleButton FontSize="18" Padding="10, 5, 10, 5" Margin="0, 10, 0, 0" HorizontalAlignment="Center" Checked="mostrarCoordenadas" Unchecked="ocultarCoordenadas">Mostrar</ToggleButton>
        </StackPanel>
    </Grid>
</Page>
