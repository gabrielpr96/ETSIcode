                </MenuItem>
            </MenuItem>
            <MenuItem Header="Cortes _Generales">
                <MenuItem Header="Co_ngreso" Tag="https://www.congreso.es/" InputGestureText="Alt + N" Click="onAbrirWeb">
                    <MenuItem.Icon>
                        <Image Source="src/congreso.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Sena_do" Tag="https://www.senado.es/" InputGestureText="Alt + D" Click="onAbrirWeb">
                    <MenuItem.Icon>
                        <Image Source="src/senado.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
