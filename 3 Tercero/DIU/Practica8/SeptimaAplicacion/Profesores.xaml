        mc:Ignorable="d"
        Title="Septima Aplicación Profesores" Height="450" Width="728" Icon="src/icon.png">
    <Grid>
        <Menu>
            <MenuItem Header="_Comunidades Autónomas">
                <MenuItem Header="_Aragón" Tag="https://www.aragon.es/" InputGestureText="Alt + A" Click="onAbrirWeb">
                    <MenuItem.Icon>
                        <Image Source="src/aragon.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="A_ndalucía" Tag="https://www.juntadeandalucia.es/" InputGestureText="Alt + N" Click="onAbrirWeb">
                    <MenuItem.Icon>
                        <Image Source="src/andalucia.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Extremadura" Tag="http://www.juntaex.es/" InputGestureText="Alt + E" Click="onAbrirWeb">
                    <MenuItem.Icon>
                        <Image Source="src/extremadura.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Universidades">
                <MenuItem Header="Univ. _Huelva" Tag="http://uhu.es/" InputGestureText="Alt + H" Click="onAbrirWeb">
                    <MenuItem.Icon>
                        <Image Source="src/univ_uhu.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Univ. _Sevilla" Tag="https://us.es/" InputGestureText="Alt + S" Click="onAbrirWeb">
                    <MenuItem.Icon>
                        <Image Source="src/univ_us.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Univ. _Granada" Tag="https://ugr.es/" InputGestureText="Alt + G" Click="onAbrirWeb">
