<Page x:Class="Clase9.paginas.formulario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clase9.paginas"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="728"
      Title="Formulario">
    <StackPanel>
        <TextBlock>Nombre:</TextBlock>
        <TextBox Name="nombre" LostFocus="comprobar" MouseEnter="entrada" MouseLeave="borrar" Width="100" HorizontalAlignment="Left"/>
        <TextBlock>Año de nacimiento</TextBlock>
        <TextBox Name="ano" PreviewTextInput="validar" Width="50" HorizontalAlignment="Left"/>
    </StackPanel>
</Page>
